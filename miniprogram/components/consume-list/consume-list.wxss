.container {
  padding: 20rpx;
  padding-bottom: 120rpx;
}

.consume-list {
  width: 100%;
}

.consume-item {
  display: flex;
  padding: 20rpx;
  background: #fff;
  margin-bottom: 20rpx;
  border-radius: 12rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.1);
}

.consume-image {
  width: 160rpx;
  height: 160rpx;
  border-radius: 8rpx;
  margin-right: 20rpx;
}

.consume-info {
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}

.consume-name {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
}

.consume-stock {
  font-size: 24rpx;
  color: #666;
  margin: 8rpx 0;
}

.consume-bottom {
  display: flex;
  justify-content: flex-end;
  align-items: center;
}

.consume-action {
  display: flex;
  align-items: center;
}

.minus, .plus {
  width: 36rpx;
  height: 36rpx;
  border-radius: 50%;
  background: rgb(76, 175, 80);
  color: #fff;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 24rpx;
}

.count {
  margin: 0 20rpx;
  font-size: 28rpx;
  color: #333;
}

.cart-bar {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  height: 100rpx;
  background: #fff;
  display: flex;
  align-items: center;
  padding: 0 30rpx;
  box-shadow: 0 -2rpx 10rpx rgba(0, 0, 0, 0.1);
}

.cart-info {
  flex: 1;
}

.total-count {
  font-size: 28rpx;
  color: #666;
}

.submit-btn {
  width: 200rpx;
  height: 72rpx;
  background: rgb(76, 175, 80);
  color: #fff;
  border-radius: 36rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 28rpx;
}

/* 订单详情弹窗样式 */
.order-detail-popup {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  z-index: 1000;
  display: flex;
  align-items: center;
  justify-content: center;
}

.popup-mask {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.5);
}

.popup-content {
  position: relative;
  width: 80%;
  max-width: 600rpx;
  background: #fff;
  border-radius: 24rpx;
  padding: 30rpx;
  max-height: 80vh;
  display: flex;
  flex-direction: column;
}

.popup-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 30rpx;
  padding-bottom: 20rpx;
  border-bottom: 1rpx solid #eee;
}

.popup-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
}

.popup-close {
  font-size: 40rpx;
  color: #999;
  padding: 10rpx;
}

.popup-body {
  flex: 1;
  max-height: 60vh;
  overflow-y: auto;
}

.order-item {
  padding: 20rpx;
  border-bottom: 1rpx solid #eee;
}

.order-item-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 10rpx;
}

.order-item-name {
  font-size: 28rpx;
  color: #333;
  font-weight: bold;
}

.order-item-count {
  font-size: 26rpx;
  color: #666;
}

.order-total {
  display: flex;
  align-items: center;
  font-size: 28rpx;
  color: #333;
  margin-bottom: 20rpx;
}

.order-total .total-count {
  font-size: 32rpx;
  color: rgb(76, 175, 80);
  font-weight: bold;
  margin-left: 10rpx;
}

.confirm-btn {
  width: 100%;
  height: 80rpx;
  background: rgb(76, 175, 80);
  color: #fff;
  border-radius: 40rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 28rpx;
} 