.reviews-container {
  min-height: 100vh;
  background-color: #F5F5F5;
  padding-bottom: 40rpx;
}

.header {
  background-color: rgb(150,184,105);
  padding: 30rpx;
  text-align: center;
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  z-index: 100;
}

.title {
  color: #FFFFFF;
  font-size: 36rpx;
  font-weight: bold;
}

.review-list {
  margin-top: 120rpx;
  padding: 20rpx;
}

.review-item {
  background: #fff;
  padding: 30rpx;
  border-radius: 12rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 2rpx 8rpx rgba(0,0,0,0.04);
}

.review-top {
  display: flex;
  justify-content: space-between;
  margin-bottom: 16rpx;
}

.review-type {
  font-size: 28rpx;
  color: #666;
}

.review-time {
  font-size: 24rpx;
  color: #999;
}

.review-rating {
  display: flex;
  align-items: center;
  margin-bottom: 16rpx;
}

.rating-text {
  font-size: 26rpx;
  color: #666;
  margin-right: 10rpx;
}

.stars {
  display: flex;
  gap: 4rpx;
}

.star {
  font-size: 32rpx;
  color: #ddd;
}

.star.active {
  color: #ffd700;
}

.review-comment {
  font-size: 28rpx;
  color: #333;
  line-height: 1.5;
}

.empty-review {
  text-align: center;
  color: #999;
  font-size: 28rpx;
  padding: 40rpx 0;
} 