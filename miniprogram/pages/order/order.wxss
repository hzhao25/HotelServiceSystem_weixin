.container {
  padding: 20rpx;
}

.order-list {
  width: 100%;
}

.order-list-container {
  padding: 30rpx 10rpx;
  background: #f7f7f7;
  min-height: 100vh;
}

.order-item {
  display: flex;
  background: #fff;
  border-radius: 18rpx;
  margin-bottom: 24rpx;
  box-shadow: 0 2rpx 8rpx rgba(0,0,0,0.04);
  overflow: hidden;
}

.order-img {
  width: 160rpx;
  height: 160rpx;
  border-radius: 0 0 0 18rpx;
  object-fit: cover;
}

.order-info {
  flex: 1;
  padding: 20rpx 24rpx;
  display: flex;
  flex-direction: column;
  justify-content: center;
}

.order-type {
  font-size: 30rpx;
  color: #333;
  font-weight: bold;
  margin-bottom: 8rpx;
}

.order-desc {
  font-size: 28rpx;
  color: #666;
  margin-bottom: 8rpx;
}

.order-time {
  font-size: 26rpx;
  color: #999;
  margin-bottom: 8rpx;
}

.order-status {
  font-size: 28rpx;
  color: #4CAF50;
  font-weight: bold;
}

.order-content {
  padding-top: 20rpx;
}

.order-detail {
  background: #f8f8f8;
  border-radius: 8rpx;
  padding: 16rpx;
}

.detail-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 12rpx;
}

.detail-item:last-child {
  margin-bottom: 0;
}

.item-name {
  font-size: 26rpx;
  color: #666;
}

.item-count {
  font-size: 26rpx;
  color: #999;
}

.empty {
  text-align: center;
  color: #bbb;
  font-size: 32rpx;
  margin-top: 100rpx;
}

.empty-tip {
  display: flex;
  justify-content: center;
  align-items: center;
  height: 400rpx;
  color: #999;
  font-size: 28rpx;
}

.order-btns {
  display: flex;
  gap: 24rpx;
  margin: 0 0 32rpx 180rpx;
}

.btn-evaluate {
  background: #4CAF50;
  color: #fff;
  font-size: 28rpx;
  border-radius: 32rpx;
  padding: 0 36rpx;
  height: 64rpx;
  line-height: 64rpx;
  border: none;
}

.btn-cancel {
  background: #FF4D4F;
  color: #fff;
  font-size: 24rpx;
  border-radius: 28rpx;
  padding: 0 24rpx;
  height: 64rpx;
  line-height: 64rpx;
  border: none;
  text-align: center;
}

.btn-evaluated {
  background: #999;
  color: #fff;
  font-size: 28rpx;
  border-radius: 32rpx;
  padding: 0 36rpx;
  height: 64rpx;
  line-height: 64rpx;
  border: none;
} 