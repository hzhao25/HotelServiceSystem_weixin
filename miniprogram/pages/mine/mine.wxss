.mine-container {
  min-height: 100vh;
  background-color: #F5F5F5;
  padding-bottom: 100rpx;
}

/* 顶部导航栏 */
.header {
  background-color: rgb(150,184,105);
  padding: 30rpx;
  text-align: center;
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  z-index: 100;
}

.title {
  color: #FFFFFF;
  font-size: 36rpx;
  font-weight: bold;
}

/* 用户信息卡片 */
.user-card {
  margin-top: 120rpx;
  background-color: #FFFFFF;
  padding: 40rpx;
  border-radius: 20rpx;
  margin: 120rpx 30rpx 30rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.1);
}

.avatar-section {
  text-align: center;
  margin-bottom: 30rpx;
}

.avatar {
  width: 150rpx;
  height: 150rpx;
  border-radius: 75rpx;
}

.user-info {
  margin-top: 20rpx;
}

.info-item {
  display: flex;
  margin-bottom: 20rpx;
  font-size: 28rpx;
}

.label {
  color: #666666;
  width: 120rpx;
}

.value {
  color: #333333;
  flex: 1;
}

.not-login {
  text-align: center;
  padding: 40rpx 0;
}

.login-btn {
  display: inline-block;
  margin-top: 20rpx;
  color: #4CAF50;
  font-size: 28rpx;
}

/* 功能列表 */
.function-list {
  background-color: #FFFFFF;
  margin: 30rpx;
  border-radius: 20rpx;
  overflow: hidden;
}

.function-item {
  display: flex;
  align-items: center;
  padding: 30rpx;
  border-bottom: 1rpx solid #EEEEEE;
}

.function-item:last-child {
  border-bottom: none;
}

.icon {
  width: 40rpx;
  height: 40rpx;
  margin-right: 20rpx;
}

.text {
  flex: 1;
  font-size: 28rpx;
  color: #333333;
}

.arrow {
  color: #999999;
  font-size: 28rpx;
}

/* 退出登录按钮 */
.logout-section {
  margin: 60rpx 30rpx;
}

.logout-btn {
  width: 100%;
  height: 88rpx;
  line-height: 88rpx;
  text-align: center;
  background-color: #FFFFFF;
  color: #FF4D4F;
  font-size: 32rpx;
  border-radius: 44rpx;
  border: none;
}

.logout-btn:active {
  opacity: 0.8;
}

.rating-value {
  display: flex;
  align-items: center;
  gap: 10rpx;
}

.stars {
  display: flex;
  gap: 4rpx;
}

.star {
  font-size: 32rpx;
  color: #ddd;
}

.star.active {
  color: #ffd700;
} 