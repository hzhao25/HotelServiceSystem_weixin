.container {
  padding: 30rpx;
}

.section-title {
  font-size: 32rpx;
  font-weight: bold;
  margin-bottom: 20rpx;
  display: block;
}

.rating-section {
  margin-bottom: 40rpx;
  width: 100%;
}

.stars {
  display: flex;
  gap: 20rpx;
  width: 100%;
}

.star {
  font-size: 60rpx;
  color: #ddd;
}

.star.active {
  color: #ffd700;
}

.comment-section {
  margin-bottom: 40rpx;
  width: 100%;
}

.comment-input {
  width: 100%;
  height: 200rpx;
  border: 1rpx solid #ddd;
  border-radius: 8rpx;
  padding: 20rpx;
  box-sizing: border-box;
  background-color: #fff;
}

.submit-btn {
  background-color: #07c160;
  color: white;
  width: 100%;
  margin-top: 40rpx;
} 